@model Rental.WebUI.Models.Home.FilterViewModel

@using (Html.BeginForm("Filter", "Home", FormMethod.Post, htmlAttributes: new { @class = "form-filter" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="form-group col-sm-2">
            @Html.TextBoxFor(m => m.MinPrice, htmlAttributes: new { @class = "form-control", placeholder = "Min price" })
            @Html.ValidationMessageFor(m => m.MinPrice, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-2">
            @Html.TextBoxFor(m => m.MaxPrice, htmlAttributes: new { @class = "form-control", placeholder = "Max price" })
            @Html.ValidationMessageFor(m => m.MaxPrice, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-2">
            @Html.TextBoxFor(m => m.MinFootage, htmlAttributes: new { @class = "form-control", placeholder = "Min footage" })
            @Html.ValidationMessageFor(m => m.MinFootage, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-2">
            @Html.TextBoxFor(m => m.MaxFootage, htmlAttributes: new { @class = "form-control", placeholder = "Max footage" })
            @Html.ValidationMessageFor(m => m.MaxFootage, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-2">
            @Html.EnumDropDownListFor(m => m.AdvertType, htmlAttributes: new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-success">
            <i class="glyphicon glyphicon-filter"></i>
        </button>
    </div>
}