@model Rental.WebUI.ViewModels.Home.FilterViewModel

@using (Html.BeginForm("Filter", "Home", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal form-filter" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(m => m.MinPrice, new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.MinPrice, htmlAttributes: new { @class = "form-control " })
            @Html.ValidationMessageFor(m => m.MinPrice, "", new { @class = "text-danger" })
        </div>        
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.MaxPrice, new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.MaxPrice, htmlAttributes: new { @class = "form-control " })
            @Html.ValidationMessageFor(m => m.MaxPrice, "", new { @class = "text-danger" })
        </div>        
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.MinFootage, new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.MinFootage, htmlAttributes: new { @class = "form-control " })
            @Html.ValidationMessageFor(m => m.MinFootage, "", new { @class = "text-danger" })
        </div>        
    </div> 
    
    <div class="form-group">
        @Html.LabelFor(m => m.MaxFootage, new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.MaxFootage, htmlAttributes: new { @class = "form-control " })
            @Html.ValidationMessageFor(m => m.MaxFootage, "", new { @class = "text-danger" })
        </div>        
    </div> 
   
    <div class="form-group">
        @Html.LabelFor(m => m.AdvertType, new { @class = "control-label col-md-6" })
        <div class="col-md-6">
            @Html.EnumDropDownListFor(m => m.AdvertType, htmlAttributes: new { @class = "form-control " })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-6 col-md-6">
            <button type="submit" class="btn btn-success">
                <i class="glyphicon glyphicon-filter"></i>
            </button>
        </div>
    </div>
}