@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<!-- modal placeholder-->
<div id='advertModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='advertModalContent'></div>
        </div>
    </div>
</div>

<div id="alertReplaceTarget"></div>

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Advert list</strong>
    </div>
    <div class="panel-body">
        <div class="row">
            <div id="advertFilterForm" class="col-md-3">
                @{ Html.RenderAction("Filter", "Home"); }
            </div>
            <div id="advertReplaceTarget" class="col-md-9">
                @{ Html.RenderAction("List", "Home"); }
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Home/index.js"></script>
