@model Rental.WebUI.Models.Advert.AdvertViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="advertModalLabel">Create advert</h4>
</div>

@using (Html.BeginForm())
{
    <div class="modal-body">
        
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.UserId)

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Header, new {@class = "col-md-3 control-label"})
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Header, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.Header, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Content, new {@class = "col-md-3 control-label"})
                        <div class="col-md-9">
                            @Html.TextAreaFor(m => m.Content, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Footage, new {@class = "col-md-3 control-label"})
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Footage, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.Footage, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Price, new {@class = "col-md-3 control-label"})
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Price, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.AdvertType, new {@class = "col-md-3 control-label"})
                        <div class="col-md-9">
                            @Html.EnumDropDownListFor(m => m.AdvertType, new {@class = "form-control"})
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.Country, new {@class = "col-md-3 control-label"})
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Address.Country, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.Address.Country, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.City, new {@class = "col-md-3 control-label"})
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Address.City, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.Address.City, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.District, new {@class = "col-md-3 control-label"})
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Address.District, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.Address.District, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address.Street, new {@class = "col-md-3 control-label"})
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Address.Street, new {@class = "form-control"})
                            @Html.ValidationMessageFor(m => m.Address.Street, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal-footer">
        <button class="btn btn-default" type="button" data-dismiss="modal">Cancel</button>
        <input class="btn btn-primary" type="submit" value="Create" />
    </div>
}
